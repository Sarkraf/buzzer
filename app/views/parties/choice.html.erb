<div class="container mt-5 text-center text-white">
  <h1><%= @party.name %></h1>

  <hr>
  <div class="d-grid gap-2 col-10 col-md-6 mx-auto">
    <% @groups.each do |group| %>
      <%= link_to group.name, party_group_path(@party.name, group.name), class:"btn btn-danger rounded-pill text-white mb-3"%>
    <% end %>
  </div>
  <hr>

  <%= simple_form_for [@party, @group] do |f| %>
    <%= f.input :name, label: "Nom du groupe" %>
    <%= f.input :party_id, as: :hidden, input_html: { value: @party.id } %>
    <%= f.button :submit, "CrÃ©er le groupe", class:"btn btn-danger rounded-pill text-white mb-3" %>
  <% end %>

  <hr>

  <div class="d-grid text-center mt-4" >
    <%= link_to "Scoreboard", party_path(@party.name), class:"mx-auto col-6 col-md-2 btn btn-danger rounded-pill text-white mb-3" %>

    <%= link_to "Manage", party_manager_path(@party.name, @party.url), class:"mx-auto col-6 col-md-2 btn btn-danger rounded-pill text-white mb-3" %>
  </div>
</div>
