<div class="mx-auto d-flex justify-content-between" style="width: 95vw">
  <div class="mt-5 ms-5 scoreboard-container" style="width: 30vw">
    <h1 class="d-none" id="party-view"><%= @party.name %></h1>
    <div class="col-12 col-md-6 justify-content-start">
      <table class="table table-striped table-dark table-bordered text-white scoreboard" style="width: 30vw" id="score-list">
        <caption class="text-white fs-1" style="caption-side: top">LEADERBOARD</caption>
        <thead class="fs-3">
          <tr>
            <th scope="col"></th>
            <th scope="col">Group</th>
            <th scope="col">Points</th>
          </tr>
        </thead>

        <tbody class="table-group-divider" id="score-rows">

        </tbody>
      </table>
    </div>
  </div>
  <div class="mt-5 me-5" style="width: 60vw, height: 80vh">
    <div id="avatars-container" class="d-flex align-items-center" style="height: 100%">
        <% @avatars.each do |avatar| %>
          <%= image_tag image_path("avatars/#{avatar.filename}"), class:"mx-5 avatar-xl d-none", id:"party-avatar-#{avatar.id}"%>
        <% end %>
    </div>
  </div>
</div>
