<div class="container d-flex my-auto justify-content-between">
  <div class="container mt-5 ms-5 scoreboard-container" style="width: 40vw">
    <h1 id="party-view"><%= @party.name %></h1>
    <div class="col-12 col-md-6">
      <table class="table table-striped table-dark table-bordered text-white scoreboard" id="score-list">
        <caption class="text-white fs-1" style="caption-side: top">LEADERBOARD</caption>
        <thead class="fs-3">
          <tr>
            <th scope="col">"#"</th>
            <th scope="col">Group</th>
            <th scope="col">Points</th>
          </tr>
        </thead>

        <tbody class="table-group-divider" id="score-rows">

        </tbody>
      </table>
    </div>
  </div>

  <div class="group-display mt-5 me-5 " style="height: 80vh">
    <div class="group-display-header" id="groupDisplay">

    </div>
    <div id="groupAvatar" class="d-flex align-items-center" style="height: 100%">
      <%= image_tag image_path("avatars/fred"), class:"mx-5 avatar-xl"%>
    </div>
  </div>
</div>
