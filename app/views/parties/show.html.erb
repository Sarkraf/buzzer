<div class="container mt-5">
  <div class="col-12 col-md-6">
    <table class="table table-striped table-dark table-bordered text-white">
      <caption class="text-white fs-1" style="caption-side: top">LEADERBOARD</caption>
      <thead class="fs-3">
        <tr>
          <th scope="col">"#"</th>
          <th scope="col">Group</th>
          <th scope="col">Points</th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
      <% @ranked_groups.each do |group| %>
        <tr class="fs-4">
            <td><%= @ranked_groups.find_index(group) + 1 %></td>
            <td><%= group.name %></td>
            <td><%= group.score %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
